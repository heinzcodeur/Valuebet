

{% block body %}

    {% include 'head.html.twig' %}

    <h1>Classement index</h1>

    <a href="{{ path('class_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classement in classements %}
            <tr>
                <td>{{ classement.id }}</td>
                <td>{{ classement.type }}</td>
                <td>
                    <a href="{{ path('class_show', {'id': classement.id}) }}">show</a>
                    <a href="{{ path('class_edit', {'id': classement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include 'end.html.twig' %}
{% endblock %}
