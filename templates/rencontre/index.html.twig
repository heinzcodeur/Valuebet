{% block body %}
    {% include 'head.html.twig' %}

    <a href="{{ path('rencontre_new') }}" class="btn btn-primary">nouveau</a>
    <h1>Rencontre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rencontre in rencontres %}
            <tr>
                <td>{{ rencontre.id }}</td>
                <td>
                    <a href="{{ path('rencontre_show', {'id': rencontre.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('rencontre_edit', {'id': rencontre.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include 'end.html.twig' %}

{% endblock %}
